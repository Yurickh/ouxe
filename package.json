{
  "name": "ouxe",
  "version": "0.1.0",
  "main": "./lib/index.js",
  "bin": {
    "ouxe": "./lib/index.js"
  },
  "author": "Yurick <yurick.hauschild@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon --watch src/**/*.ts --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "jest",
    "lint": "eslint --ext .ts ."
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.6",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ],
    "*.{ts, js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
}
